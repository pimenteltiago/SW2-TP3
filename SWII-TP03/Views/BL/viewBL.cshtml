<form action="/BL/Adiciona" method="post">

    <div class="form-group">
        <label for="numero">Numero:</label>
        <input class="form-control" id="numero" name="bl.numero" />
    </div>
    <div class="form-group">
        <label for="consignee">Consignee:</label>
        <input class="form-control" id="consignee" name="bl.consignee" />
    </div>
    <div class="form-group">
        <label for="navio">Navio:</label>
