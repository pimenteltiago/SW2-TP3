            <th scope="col">Navio</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bl in ViewBag.bl) {
        <form action="Editar" method="POST">
            <tr>
                <td><input type="text" size="5" value="@bl.id"/></td>
                <td><input type="text" size="5" value="@bl.numero"/></td>
                <td><input type="text" size="5" value="@bl.consignee"/></td>
                <td><input type="text" size="5" value="@bl.navio"/></td>
                <td>
                    <button type="submit" class="btn btn-secondary" name="editar" id="editar">Editar</button>
                    <button type="submit" class="btn btn-danger" name="deletar" id="deletar" formaction="Deletar">Deletar</button>
                </td>
            </tr>
        </form>
        }
